<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="White"
             x:Class="TestApp.LoginPage"
             Shell.NavBarIsVisible="False">

    <VerticalStackLayout Padding="20" Spacing="15">
        <!-- Title -->
        <Label Text="Login" FontSize="28" HorizontalOptions="Center" FontAttributes="Bold" />

        <!-- Email -->
        <Entry Placeholder="Email" />

        <!-- Password -->
        <Entry Placeholder="Password" IsPassword="True" />

        <!-- Login Button -->
        <Button Text="Login" BackgroundColor="#0A1F33" TextColor="White" CornerRadius="8" />

        <!-- Or Divider -->
        <Label Text="Or" HorizontalOptions="Center" />

        <!-- Social Icons (Placeholder) -->
        <HorizontalStackLayout HorizontalOptions="Center">
            <Image Source="google.png" HeightRequest="30" WidthRequest="30" Margin="5"/>
            <Image Source="twitter.png" HeightRequest="30" WidthRequest="30" Margin="5"/>
            <Image Source="facebook.png" HeightRequest="30" WidthRequest="30" Margin="5"/>
        </HorizontalStackLayout>

        <!-- Signup Redirect -->
        <HorizontalStackLayout HorizontalOptions="Center">
            <Label Text="Don't have an account?" />
            <Label Text="Sign Up" TextColor="Blue" FontAttributes="Bold" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>